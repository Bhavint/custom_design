<li>
	<span class = "name"><%= store.name %></span>
	<span class = "timestamp">
		Created <%= time_ago_in_words(store.created_at) %> ago.
	
	<% if current_user?(store.user) || current_user.admin?%>
		<%=link_to "delete", store, method: :delete, data: { confirm: "Are You Sure?" }, title: store.name, class: "btn" %>
	<% end %>
	</span>
	<br>Twitter handle : <%= store.twitterh %>
	<br>Facebook link : <%= store.fbid %>
	<br>Pinterest link : <%= store.pinit %>
	<br>Estimated Trafic "<%= store.custcount %>" Customers
	<br><%= image_tag store.pic.url(:thumb) %>
</li>

